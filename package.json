{
  "name": "url-shortener",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "gen": "wrangler types ./src/server/types.gen.d.ts",
    "fmt": "prettier --write ./src ./*.{js,ts} ./static && npm run lint:es -- --fix",
    "test": "vitest --run --logHeapUsage --dir ./src",
    "lint:ts": "tsc -b --noEmit",
    "lint:es": "eslint ./src",
    "lint": "conc --names ts,es 'npm run lint:ts' 'npm run lint:es'",
    "build:server": "vite build --mode server",
    "build:client": "vite build --mode client",
    "build": "conc --names server,client 'npm run build:server' 'npm run build:client'",
    "watch:server": "vite build --mode server --watch",
    "watch:client": "vite build --mode client --watch",
    "watch": "conc --names server,client 'npm run watch:server' 'npm run watch:client'",
    "dev:wrangler": "wrangler --config ./dist/wrangler.json dev --no-bundle --live-reload --show-interactive-dev-session=false",
    "dev": "conc -k --restart-tries 3 --names wrnglr,server,client 'npm run dev:wrangler' 'npm run watch:server' 'npm run watch:client'"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@types/node": "^22.13.13",
    "concurrently": "^9.1.2",
    "eslint": "^9.23.0",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0",
    "vite": "^6.2.3",
    "vite-plugin-html": "^3.2.2",
    "vitest": "^3.0.9",
    "wrangler": "^4.4.1"
  },
  "engines": {
    "node": "20"
  },
  "volta": {
    "node": "20"
  }
}
